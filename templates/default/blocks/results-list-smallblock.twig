{% extends "box.twig" %}

{% block box_title %}
{{ Message('results_block_title') }}
{% endblock %}

{% block box_content %}

{% if matches|length > 0 %}
<table class="table table-borderless table-striped">
	{% for match in matches %}
	  <tr>
	    <td><a href="{{iUrl("team", "id=" ~ match.home_id) }}">{{ match.home_team }}</a> - <a href="{{iUrl("team", "id=" ~ match.guest_id) }}">{{ match.guest_team }}</a></td>
	    <td><a href="{{iUrl("match", "id=" ~ match.id) }}" title="{{ Message("match_navlabel") }}">{{ match.home_goals }}:{{ match.guest_goals }}</a></td>
	  </tr>
	{% endfor %}
</table>
{% endif %}

<p><a href="{{iUrl("results") }}" class="btn btn-primary">{{ Message("button_more") }}</a></p>

{% endblock %}