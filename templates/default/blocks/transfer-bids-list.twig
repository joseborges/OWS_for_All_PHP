{% if bids is defined and bids|length > 0 %}

	<table class="table table-striped">
		<thead>
			<tr>
				<th>{{ Message("transfer_bid_date") }}</th>
				<th>{{ Message("entity_player") }}</th>
				<th>{{ Message("transfermarket_head_deadline") }}</th>
				<th>{{ Message("transfer_bid_amount") }}</th>
				<th>{{ Message("transfer_bid_handmoney") }}</th>
				<th>{{ Message("entity_player_vertrag_gehalt") }}</th>
			</tr>
		</thead>
		<tbody>
  
	  	{% for bid in bids %}
			<tr>
				<td><a class="btn btn-mini {% if bid.ishighest %}btn-success{% else %}btn-danger{% endif %} wstooltip" 
					href="{{ env.getInternalUrl("transfer-bid", "id=" ~ bid.player_id) }}"
					title="{% if bid.ishighest %}{{ Message("transfer_bids_ishighest") }}{% else %}{{ Message("transfer_bids_overbidden") }}{% endif %}"><i class="icon-hand-up"></i> {{ env.getFormattedDatetime(bid.date) }}</a></td>
				<td><a href="{{ env.getInternalUrl("player", "id=" ~ bid.player_id) }}">{{ bid.player_firstname }} {{ bid.player_lastname }}</a></td>
				<td>{{ env.getFormattedDatetime(bid.auction_end) }}</td>
				<td>{{ bid.amount|number_format(0, ',', ' ')  }} {{ Config("game_currency") }}</td>
				<td>{{ bid.hand_money|number_format(0, ',', ' ')  }} {{ Config("game_currency") }}</td>
				<td>{{ bid.contract_salary|number_format(0, ',', ' ')  }} {{ Config("game_currency") }}</td>
			</tr>
	  	{% endfor %}
	  	
		</tbody>
	</table>


{% else %}
	<p>{{ Message("transfer_bids_nobids") }}</p>
{% endif %}
