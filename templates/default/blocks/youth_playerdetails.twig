{% import "macros/profileelements.twig" as profile %}

<h3>{{ player.firstname }} {{ player.lastname }}</h3>

{{ profile.infofield(Message("entity_youthplayer_position"), Message("option_" ~ player.position)) }}

{{ profile.infofield(Message("entity_youthplayer_age"), player.age) }}

{{ profile.infofield(Message("entity_youthplayer_nation"), player.nation) }}

{{ profile.infofield(Message("entity_youthplayer_strength"), player.strength ~ "%") }}

{{ profile.infofield(Message("entity_player_vertrag_gehalt"), (player.strength * Config("youth_salary_per_strength"))|number_format(0, ',', ' ') ~ " " ~ Config("game_currency")) }}

{% if player.transfer_fee > 0 %}
	{{ profile.infofield(Message("entity_youthplayer_transfer_fee"), 
		player.transfer_fee|number_format(0, ',', ' ') ~ " " ~ Config("game_currency")) }}
{% endif %}

<p style="margin-top: 10px"><a href="#playerstatistics" class="btn btn-small" data-toggle="collapse"><i class="icon-zoom-in"></i> {{ Message("youthteam_showstatistics_tooltip") }}</a></p>
<div id="playerstatistics" class="collapse">
{{ profile.infofield(Message("entity_youthplayer_st_matches"), player.st_matches) }}

{{ profile.infofield(Message("entity_youthplayer_st_goals"), player.st_goals) }}

{{ profile.infofield(Message("entity_youthplayer_st_assists"), player.st_assists) }}

{{ profile.infofield(Message("entity_youthplayer_st_cards_yellow"), player.st_cards_yellow) }}

{{ profile.infofield(Message("entity_youthplayer_st_cards_yellow_red"), player.st_cards_yellow_red) }}

{{ profile.infofield(Message("entity_youthplayer_st_cards_red"), player.st_cards_red) }}
</div>
