{% if completedtransfers is defined and completedtransfers|length > 0 %}

	<table class="table table-striped">
		<thead>
			<tr>
				<th>{{ Message("transfer_date") }}</th>
				<th>{{ Message("entity_player") }}</th>
				<th>{{ Message("transfer_from") }}</th>
				<th>{{ Message("transfer_to") }}</th>
				<th>{{ Message("transfer_bid_amount") }}</th>
			</tr>
		</thead>
		<tbody>

	  	{% for transfer in completedtransfers %}
			<tr>
				<td>{{FormattedDate(transfer.transfer_date) }}</td>
				<td><a href="{{iUrl("player", "id=" ~ transfer.player_id) }}">{{ transfer.player_firstname }} {{ transfer.player_lastname }}</a></td>
				<td>{% if transfer.from_id > 0 %}
				<a href="{{iUrl("team", "id=" ~ transfer.from_id) }}">{{ transfer.from_name }}</a>
				{% else %}-{% endif %}
				</td>
				<td><a href="{{iUrl("team", "id=" ~ transfer.to_id) }}">{{ transfer.to_name }}</a></td>
				<td>
					{% if transfer.hand_money > 0 %}
						<p><small>{{ Message("transfer_bid_handmoney") }}</small><br>
						{{ transfer.hand_money|number_format(0, ',', ' ')  }} {{ Config("game_currency") }}</p>
					{% endif %}

					<p>
						{% if transfer.directtransfer_amount > 0 %}
							{{ transfer.directtransfer_amount|number_format(0, ',', ' ')  }} {{ Config("game_currency") }}
						{% else %}
							{{ transfer.amount|number_format(0, ',', ' ')  }} {{ Config("game_currency") }}
						{% endif %}

						{% if transfer.exchangeplayer1_id > 0 or transfer.exchangeplayer2_id > 0 %}
							<ul class="unstyled">
								{% if transfer.exchangeplayer1_id > 0  %}
								<li><small>+ <a href="{{iUrl("player", "id=" ~ transfer.exchangeplayer1_id) }}">{% if transfer.exchangeplayer1_pseudonym|length > 0 %}{{ transfer.exchangeplayer1_pseudonym }}{% else %}{{ transfer.exchangeplayer1_firstname }} {{ transfer.exchangeplayer1_lastname }}{% endif %}</a></small></li>
								{% endif %}

								{% if transfer.exchangeplayer2_id > 0  %}
								<li><small>+ <a href="{{iUrl("player", "id=" ~ transfer.exchangeplayer2_id) }}">{% if transfer.exchangeplayer2_pseudonym|length > 0 %}{{ transfer.exchangeplayer2_pseudonym }}{% else %}{{ transfer.exchangeplayer2_firstname }} {{ transfer.exchangeplayer2_lastname }}{% endif %}</a></small></li>
								{% endif %}
							</ul>
						{% endif %}

					</p>
				</td>
			</tr>
	  	{% endfor %}

		</tbody>
	</table>


{% else %}
	<p>{{ Message("transfers_no_transfers") }}</p>
{% endif %}