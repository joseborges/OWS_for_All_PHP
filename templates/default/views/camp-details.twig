{% import "macros/formelements.twig" as formelements %}
{% import "macros/profileelements.twig" as profile %}

{% extends "base.twig" %}

{% block page_title %}
{{ camp.name }}
{% endblock %}

{% block page_content %}

{{ profile.infofield(Message("entity_trainingcamp_name"), camp.name) }}
{{ profile.infofield(Message("entity_trainingcamp_preis_spieler_tag"), camp.costs|number_format(0, ',', ' ') ~ " " ~ Config("game_currency")) }}
{{ profile.infofield(Message("entity_trainingcamp_p_staerke"), camp.effect_strength) }}
{{ profile.infofield(Message("entity_trainingcamp_p_technik"), camp.effect_strength_technique) }}
{{ profile.infofield(Message("entity_trainingcamp_p_kondition"), camp.effect_strength_stamina) }}
{{ profile.infofield(Message("entity_trainingcamp_p_frische"), camp.effect_strength_freshness) }}
{{ profile.infofield(Message("entity_trainingcamp_p_zufriedenheit"), camp.effect_strength_satisfaction) }}

<form class="form-horizontal" method="post">
	<fieldset>
    	<legend>{{ Message('camp-detail_form_title') }}</legend>
		{{ formelements.textfield('start_date', Message('camp-detail_start_date'), (Request("start_date")) ? Request("start_date"):FormattedDate(defaultDate), true, validationMsg) }}

		{% set daysLabel = Message('camp-detail_days_help')|format(Config("trainingcamp_min_days"), Config("trainingcamp_max_days")) %}
		{{ formelements.textfield('days', Message('camp-detail_days'), Request("days"), true, validationMsg, "number", daysLabel) }}

	</fieldset>
	<div class="form-actions">
		<button type="submit" class="btn btn-primary">{{ Message('button_save') }}</button>
		<a href="{{iUrl("trainingcamp") }}" class="btn">{{ Message('button_cancel') }}</a>
	</div>
	<input type="hidden" name="id" value="{{ camp.id }}"/>
	<input type="hidden" name="page" value="camp-details"/>
	<input type="hidden" name="action" value="book-camp"/>
</form>

{% endblock %}