{% extends "base.twig" %}

{% import "macros/paginator.twig" as pagination %}

{% block page_title %}
{{ Message("premiumaccount_navlabel") }}
{% endblock %}

{% block page_content %}

<h3>{{ Message("entity_users_premium_balance") }}: {{ env.user.premiumBalance|number_format(0, ',', ' ') }} {{ Config("premium_credit_unit") }}</h3>

<p>
	<a href="{{iUrl(Config("premium_infopage")) }}" class="btn"><i class="icon-info-sign"></i> {{ Message("premiumaccount_recharge_button") }}</a>
	{% if Config("premium_exchangerate_gamecurrency") > 0 %}
		<a href="{{iUrl("premium-exchange") }}" class="btn"><i class="icon-money"></i> {{ Message("premiumaccount_exchange_link") }}</a>
	{% endif %}
</p>

{% if statements is defined and statements|length > 0 %}

	<h3>{{ Message("entity_premiumstatement") }}</h3>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>{{ Message("entity_premiumstatement_created_date") }}</th>
				<th>{{ Message("entity_premiumstatement_action_id") }}</th>
				<th>{{ Message("entity_premiumstatement_amount") }}</th>
			</tr>
		</thead>
		<tbody>
		{% for statement in statements %}
		<tr>
			<td>{{FormattedDate(statement.created_date) }}</td>
			<td>
				{% if hasMessage("actionsubject_" ~ statement.action_id) %}
					{{ Message("actionsubject_" ~ statement.action_id) }}
				{% else %}
					{{ statement.action_id }}
				{% endif %}
			</td>
			<td>
				{% if statement.amount < 0 %}<span style="color: red">{% endif %}
				{{ statement.amount|number_format(0, ',', ' ') }} {{ Config("premium_credit_unit") }}
				{% if statement.amount < 0 %}</span>{% endif %}
			</td>
		</tr>
		{% endfor %}
		</tbody>
	</table>

	{{ pagination.paginator(paginator) }}

{% endif %}

{% if payments|length > 0 %}
	<h3>{{ Message("entity_premiumpayment") }}</h3>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>{{ Message("entity_premiumpayment_created_date") }}</th>
				<th>{{ Message("entity_premiumpayment_amount") }}</th>
			</tr>
		</thead>
		<tbody>
		{% for payment in payments %}
		<tr>
			<td>{{Datetime(payment.created_date) }}</td>
			<td>{{ payment.amount|number_format(0, ',', ' ') }} {{ Config("premium_currency") }}</td>
		</tr>
		{% endfor %}
		</tbody>
	</table>
{% endif %}
{% endblock %}