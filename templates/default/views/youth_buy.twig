{% extends "base.twig" %}

{% block page_title %}
{{ Message("youthplayer-buy_navlabel") }}
{% endblock %}

{% block page_content %}
<form class="form-horizontal" method="post">

	<fieldset>
		<legend>{{ Message("youthplayer-buy_formlabel") }}</legend>
		
		<p><strong>{{ Message("youthplayer-buy_confirmationmsg") }}</strong></p>
	</fieldset>
	<div class="form-actions">
		<button type="submit" class="btn btn-primary">{{ Message('button_confirm') }}</button>
		<a href="{{ env.getInternalUrl("youth-marketplace") }}" class="btn">{{ Message('button_cancel') }}</a>
	</div>
	<input type="hidden" name="page" value="youthplayer-buy"/>
	<input type="hidden" name="id" value="{{ env.getRequestParameter('id') }}"/>
	<input type="hidden" name="action" value="buy-youthplayer"/>
</form>
{% endblock %}
