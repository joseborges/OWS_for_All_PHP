{% import "macros/formelements.twig" as formelements %}
{% import "macros/paginator.twig" as pagination %}
{% import "macros/profileelements.twig" as profile %}

{% extends "base.twig" %}

{% block page_title %}
{{ Message("trainingcamp_navlabel") }}
{% endblock %}

{% block page_content %}

{% if bookedCamp is defined and bookedCamp|length > 0 %}

	<h3>{{ Message("trainingcamp_bookedcamp") }}</h3>
	
	{{ profile.infofield(Message("entity_trainingcamp_name"), bookedCamp.name) }}
	{{ profile.infofield(Message("trainingcamp_startdate"), env.getFormattedDate(bookedCamp.date_start)) }}
	{{ profile.infofield(Message("trainingcamp_enddate"), env.getFormattedDate(bookedCamp.date_end)) }}
	{{ profile.infofield(Message("entity_trainingcamp_p_staerke"), bookedCamp.effect_strength) }}
	{{ profile.infofield(Message("entity_trainingcamp_p_technik"), bookedCamp.effect_strength_technique) }}
	{{ profile.infofield(Message("entity_trainingcamp_p_kondition"), bookedCamp.effect_strength_stamina) }}
	{{ profile.infofield(Message("entity_trainingcamp_p_frische"), bookedCamp.effect_strength_freshness) }}
	{{ profile.infofield(Message("entity_trainingcamp_p_zufriedenheit"), bookedCamp.effect_strength_satisfaction) }}
	
	<p style="margin-top: 10px; margin-bottom: 20px;"><i class="icon-warning-sign"></i> {{ Message('trainingcamp_delete_note') }}</p>
	
	<form method="post">
		<div class="form-actions">
			<button type="submit" class="btn"><i class="icon-remove-sign"></i> {{ Message('trainingcamp_delete') }}</button>
		</div>
		<input type="hidden" name="page" value="trainingcamp"/>
		<input type="hidden" name="action" value="cancel-camp"/>
		<input type="hidden" name="bookingid" value="{{ bookedCamp.id }}"/>
	</form>
{% else %}

	{% if camps is not defined or camps|length < 1 %}
		<p>{{ Message("trainingcamp_nocamps") }}</p>
	{% else %}
	
		<table class="table table-striped">
			<thead>
				<tr>
					<th>{{ Message("entity_trainingcamp_name") }}</th>
					<th>{{ Message("entity_trainingcamp_preis_spieler_tag") }}</th>
					<th>{{ Message("entity_trainingcamp_p_staerke") }}</th>
					<th>{{ Message("entity_trainingcamp_p_technik") }}</th>
					<th>{{ Message("entity_trainingcamp_p_kondition") }}</th>
					<th>{{ Message("entity_trainingcamp_p_frische") }}</th>
					<th>{{ Message("entity_trainingcamp_p_zufriedenheit") }}</th>
				</tr>
			</thead>
			<tbody>
			{% for camp in camps %}
				<tr>
					<td><p>{{ camp.name }} ({{ camp.country }})</p>
					<p><a href="{{ env.getInternalUrl("camp-details", "id=" ~ camp.id) }}" class="btn"><i class="icon-hand-right"></i> {{ Message("button_choose") }}</a></p></td>
					<td>{{ camp.costs|number_format(0, ',', ' ') }} {{ Config("game_currency") }}</td>
					<td>{{ camp.effect_strength }}</td>
					<td>{{ camp.effect_strength_technique }}</td>
					<td>{{ camp.effect_strength_stamina }}</td>
					<td>{{ camp.effect_strength_freshness }}</td>
					<td>{{ camp.effect_strength_satisfaction }}</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	
	{% endif %}
{% endif %}
{% endblock %}
