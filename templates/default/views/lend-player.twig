{% extends "base.twig" %}
{% import "macros/formelements.twig" as formelements %}

{% block page_title %}
	{{ Message("lend-player_navlabel") }}:
	{% if player.player_pseudonym|length > 0  %}
		{{ player.player_pseudonym }}
	{% else %}
		{{ player.player_firstname ~ " " ~ player.player_lastname }}
	{% endif %}
{% endblock %}

{% block page_content %}

<dl class="dl-horizontal">
  <dt>{{ Message("entity_player_marktwert") }}</dt>
  <dd>{{ player.player_marketvalue|number_format(0, ',', ' ')  }} {{ Config("game_currency") }}</dd>

  <dt>{{ Message("entity_player_vertrag_gehalt") }}</dt>
  <dd>{{ player.player_contract_salary|number_format(0, ',', ' ')  }} {{ Config("game_currency") }}</dd>

  <dt>{{ Message("entity_player_vertrag_torpraemie") }}</dt>
  <dd>{{ player.player_contract_goalbonus|number_format(0, ',', ' ')  }} {{ Config("game_currency") }}</dd>

  <dt>{{ Message("entity_player_vertrag_spiele") }}</dt>
  <dd>{{ player.player_contract_matches  }} {{ Message("player_details_unit_matches") }}</dd>
</dl>

<p style="margin-top: 30px"><i class="icon-arrow-right"></i> <a href="{{iUrl("player", "id=" ~ player.player_id) }}">{{ Message("player_navlabel") }}</a></p>

<p>{{ Message("lend-player_intro", Config("lending_matches_max"))|raw }}</p>

<form class="form-horizontal" method="post">

	{{ formelements.textfield('fee', Message('entity_player_lending_fee'), Request('fee'), true, validationMsg, 'number') }}

	<div class="form-actions">
		<button type="submit" class="btn btn-primary">{{ Message('button_submit') }}</button>
		<a href="{{iUrl("myteam") }}" class="btn">{{ Message('button_cancel') }}</a>
	</div>
	<input type="hidden" name="page" value="lend-player"/>
	<input type="hidden" name="id" value="{{ Request('id') }}"/>
	<input type="hidden" name="action" value="lend-player"/>
</form>
{% endblock %}