{% extends "base.twig" %}

{% import "macros/paginator.twig" as pagination %}

{% block page_title %}
{{ Message("finances_navlabel") }}
{% endblock %}

{% block page_content %}

<h3>{{ Message("entity_club_finanz_budget") }}: {{ budget|number_format(0, ',', ' ') }} {{ Config("game_currency") }}</h3>

{% if statements is defined and statements|length > 0 %}

	<table class="table table-striped">
		<thead>
			<tr>
				<th>{{ Message("account_statement_date") }}</th>
				<th>{{ Message("account_statement_sender") }}</th>
				<th>{{ Message("account_statement_subject") }}</th>
				<th>{{ Message("account_statement_amount") }}</th>
			</tr>
		</thead>
		<tbody>
		{% for statement in statements %}
		<tr>
			<td>{{FormattedDate(statement.date) }}</td>
			<td>
				{% if hasMessage(statement.sender) %}
					{{ Message(statement.sender) }}
				{% else %}
					{{ statement.sender }}
				{% endif %}
			</td>
			<td>
				{% if hasMessage(statement.subject) %}
					{{ Message(statement.subject) }}
				{% else %}
					{{ statement.subject }}
				{% endif %}
			</td>
			<td>
				{% if statement.amount < 0 %}<span style="color: red">{% endif %}
				{{ statement.amount|number_format(0, ',', ' ') }} {{ Config("game_currency") }}
				{% if statement.amount < 0 %}</span>{% endif %}
			</td>
		</tr>
		{% endfor %}
		</tbody>
	</table>

	{{ pagination.paginator(paginator) }}

{% endif %}
{% endblock %}