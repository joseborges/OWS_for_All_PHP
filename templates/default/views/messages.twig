{% import "macros/paginator.twig" as pagination %}
{% import "macros/profileelements.twig" as profile %}

{% extends "base.twig" %}

{% block page_title %}
{{ Message("messages_navlabel") }}
{% endblock %}

{% block page_content %}

{% if Config("messages_enabled") %}
	<p><a href="{{ env.getInternalUrl() }}" class="btn btn-small"><i class="icon-refresh"></i> {{ Message("button_refresh") }}</a>
	<a href="#composeMessage" class="btn btn-small" data-toggle="modal"><i class="icon-pencil"></i> {{ Message("messages_compose_button") }}</a></p>
	<form class="form-horizontal">
		<div id="composeMessage" class="modal hide fade" tabindex="-1" role="dialog" 
			aria-labelledby="composeModalLabel" aria-hidden="true">
		  <div class="modal-header">
		    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		    <h3 id="composeModalLabel">{{ Message("messages_compose_title") }}</h3>
		  </div>
		  <div class="modal-body">
		  
			  <div id="modalmessages"></div>
			  <div id="sendmsgbody">
				{{ viewHandler.renderBlock("compose-message-body")|raw }}
		  	  </div>
		  </div>
		  <div class="modal-footer">
		  	<button type="submit" class="btn btn-primary ajaxSubmit" 
				data-ajaxtarget="sendmsgbody" data-ajaxblock="compose-message-body" data-messagetarget="modalmessages">{{ Message('messages_send_button') }}</button>
		    <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">{{ Message("button_close") }}</a>
		  </div>
		</div>
		
		<input type="hidden" name="action" value="send-message"/>
	</form>
{% endif %}

<ul class="nav nav-tabs" id="teamTab">
  <li class="active"><a href="#inbox" data-toggle="tab">{{ Message("messages_tab_inbox") }}</a></li>
  <li><a href="#outbox" data-toggle="tab" class="ajaxLink"
  	data-ajaxtarget="outboxlist" data-ajaxblock="messages-outbox">{{ Message("messages_tab_outbox") }}</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="inbox">
  
  	{% if messages|length > 0 %}
  	
  	<table class="table table-striped">
  		<thead>
  			<tr>
  				<th>{{ Message("messages_date") }}</th>
  				<th>{{ Message("messages_sender") }}</th>
  				<th>{{ Message("messages_subject") }}</th>
  				<th>&nbsp;</th>
  			</tr>
  		</thead>
  		<tbody>
  		{% for message in messages %}
  			<tr>
  				<td>{{ env.getFormattedDatetime(message.date) }}</td>
  				<td><a href="{{ env.getInternalUrl("user", "id=" ~ message.sender_id) }}">{{ message.sender_name }}</a></td>
  				<td>
  				{% if not message.seen %}<strong>{% endif %}
  				<a href="#showMessage" data-toggle="modal" class="ajaxLink"
  					data-ajaxtarget="messagecontent" data-ajaxblock="message-details" data-ajaxquerystr="id={{ message.message_id }}">{{ message.subject }}</a>
  				{% if not message.seen %}</strong>{% endif %}
  				</td>
  				<td><a href="{{ env.getInternalUrl("messages", "action=delete-message&id=" ~ message.message_id) }}" title="{{ Message("messages_delete") }}"><i class="icon-trash"></i></a></td>
  			</tr>
  		{% endfor %}
  		</tbody>
  	</table>
  	
  	{{ pagination.paginator(paginator) }}
  	
  	{% else %}
  	<p>{{ Message("messages_empty_inbox") }}</p>
  	{% endif %}
  
  </div>
  <div class="tab-pane" id="outbox">
  	<div id="outboxlist"></div>
  </div>
</div>

	<div id="showMessage" class="modal hide fade" tabindex="-1" role="dialog" 
		aria-labelledby="messageModalLabel" aria-hidden="true">
	  <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
	    <h3 id="messageModalLabel">{{ Message("messages_details_title") }}</h3>
	  </div>
	  <div class="modal-body">
	    <div id="messagecontent"></div>
	  </div>
	  <div class="modal-footer">
	    <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">{{ Message("button_close") }}</a>
	  </div>
	</div>
{% endblock %}
