{% extends "base.twig" %}

{% import "macros/messagebox.twig" as msgbox %}


{% block browser_title %}
{{ Message("home_title", Config("projectname")) }}
{% endblock %}

{% block page_header %}
	<small>PHP {{constant('PHP_VERSION')}} | Twig {{constant('Twig\\Environment::VERSION')}}</small><br>
{% if env.user.id == null %}
<div class="hero-unit">
  <h1>{{ block("browser_title") }}</h1>
  <p>{{ Message("home_teaser") }}</p>

  	{% if Config("allow_userregistration") or Config("registration_url")|length > 0 %}
		{% set registerUrl =iUrl("register") %}
		{% if Config("registration_url")|length > 0 %}
			{% set registerUrl = Config("registration_url") %}
		{% endif %}
		<div style="text-align:center;"><a href="{{ registerUrl }}" class="btn btn-large">{{ Message("home_teaser_link_register") }}</a></div>
	{% endif %}

</div>
{% endif %}

{% if blocks.content_top is defined %}
	{% for uiBlock in blocks.content_top %}
		<div id="{{ uiBlock.id }}_block">
		{{ viewHandler.renderBlock(uiBlock.id, uiBlock)|raw }}
		</div>
	{% endfor %}
{% endif %}

<div id="messages">
{% if frontMessages is defined %}
	{% for message in frontMessages %}
		{{ msgbox.box(message.title, message.message, message.type) }}
	{% endfor %}
{% endif %}
</div>

<div class="row">
	<div class="span4">
		{{ viewHandler.renderBlock('news')|raw }}

		<div class="ajaxLoadedBlock" id="projectStatisticsBlock"
			data-ajaxblock="projectstatistics" data-ignoreemptymessages="true">
		</div>
	</div>
	<div class="span4">

		<div class="ajaxLoadedBlock" id="latestResultsBlock"
				data-ajaxblock="latest-results-summary" data-ignoreemptymessages="true"></div>

			<div class="ajaxLoadedBlock" id="latestActivitiesBlock"
				data-ajaxblock="user-activities-all" data-ignoreemptymessages="true" data-refreshperiod="10"></div>
	</div>

	<div class="span4">
		{% if blocks.sidebar is defined %}
			{% for uiBlock in blocks.sidebar %}
				{{ viewHandler.renderBlock(uiBlock.id, uiBlock)|raw }}
			{% endfor %}
		{% endif %}
	</div>
</div>

{% if blocks.content_bottom is defined %}
	{% for uiBlock in blocks.content_bottom %}
		<div id="{{ uiBlock.id }}_block">
		{{ viewHandler.renderBlock(uiBlock.id, uiBlock)|raw }}
		</div>
	{% endfor %}
{% endif %}

{% endblock %}

{% block page_columns %}
{% endblock %}