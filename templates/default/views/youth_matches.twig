{% extends "base.twig" %}
{% import "macros/messagebox.twig" as messagebox %}
{% import "macros/paginator.twig" as pagination %}

{% block page_title %}
{{ Message("youthmatches_title") }}
{% endblock %}

{% block page_content %}

{% if matches is defined and matches|length > 0 %}

	<table class="table table-striped">
		<thead>
			<tr>
				<th>{{ Message("entity_youthmatch_matchdate") }}</th>
				<th>{{ Message("entity_youthmatch_home_team_id") }}</th>
				<th>{{ Message("entity_youthmatch_guest_team_id") }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		{% for match in matches %}
			<tr>
				<td>{{Datetime(match.date, i18n) }}</td>
				<td>
					{% if match.home_team_picture|length %}
						<img src="{{ Config("context_root") }}/uploads/club/{{ match.home_team_picture }}" style="max-width: 20px"/>
					{% endif %}
					<a href="{{iUrl("team", "id=" ~ match.home_id) }}">{{ match.home_team }}</a>

					{% if match.home_user_id > 0 %}
						<br>
						{% if match.home_user_picture|length > 0 %}
							<a href="{{iUrl("user", "id=" ~ match.home_user_id) }}"><img src="{{ match.home_user_picture }}" style="width: 20px; height: 20px"/></a>
						{% endif %}
						<small><a href="{{iUrl("user", "id=" ~ match.home_user_id) }}">{{ match.home_user_nick }}</a></small>
					{% endif %}
				</td>
				<td>
					{% if match.guest_team_picture|length %}
						<img src="{{ Config("context_root") }}/uploads/club/{{ match.guest_team_picture }}" style="max-width: 20px"/>
					{% endif %}
					<a href="{{iUrl("team", "id=" ~ match.guest_id) }}">{{ match.guest_team }}</a>

					{% if match.guest_user_id > 0 %}
						<br>
						{% if match.guest_user_picture|length > 0 %}
							<a href="{{iUrl("user", "id=" ~ match.guest_user_id) }}"><img src="{{ match.guest_user_picture }}" style="width: 20px; height: 20px"/></a>
						{% endif %}
						<small><a href="{{iUrl("user", "id=" ~ match.guest_user_id) }}">{{ match.guest_user_nick }}</a></small>
					{% endif %}
				</td>
				<td>
					{% if match.simulated == 1 %}
						<a href="{{iUrl("youth-match", "id=" ~ match.match_id) }}"
							title="{{ Message("match_navlabel") }}">{{ match.home_goals }} - {{ match.guest_goals }}</a>
					{% else %}
						<a href="{{iUrl("youth-formation", "matchid=" ~ match.match_id) }}" class="btn btn-small"><i class="icon-sitemap"></i> {{ Message("formation_navlabel") }}</a>
					{% endif %}
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

	{{ pagination.paginator(paginator) }}

{% else %}
	{{ messagebox.box(Message("youthmatches_no_matches"), "", "info") }}
{% endif %}

{% endblock %}