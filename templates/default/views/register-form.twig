{% import "macros/formelements.twig" as formelements %}

{% extends "base.twig" %}

{% block page_title %}
{{ Message("registration_title") }}
{% endblock %}

{% block page_content %}
<form class="form-horizontal" method="post">

	{{ formelements.textfield('nick', Message('entity_users_nick'), env.getRequestParameter('nick'), true, validationMsg) }}
	
	{{ formelements.textfield('email', Message('entity_users_email'), env.getRequestParameter('email'), true, validationMsg, 'email') }}
	
	{{ formelements.textfield('email_repeat', Message('registration_email_repeat'), env.getRequestParameter('email_repeat'), true, validationMsg, 'email') }}
	
	{{ formelements.textfield('pswd', Message('entity_users_passwort'), '', true, validationMsg, 'password') }}
	
	{{ formelements.textfield('pswd_repeat', Message('registration_password_repeat'), '', true, validationMsg, 'password') }}
	
	{{ formelements.checkbox('termsandconditions', Message('termsandconditions_accept', env.getInternalUrl("termsandconditions")), env.getRequestParameter("termsandconditions"), true, validationMsg) }}
	
	{% if captchaCode is defined and captchaCode|length > 0 %}
	{{ captchaCode|raw }}
	{% endif %}
	
	<div class="form-actions">
		<button type="submit" class="btn btn-primary">{{ Message('registration_submit_button') }}</button>
	</div>
	<input type="hidden" name="page" value="register"/>
	<input type="hidden" name="action" value="userregistration"/>
</form>
{% endblock %}
