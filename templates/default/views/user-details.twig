{% import "macros/profileelements.twig" as profile %}
{% import "macros/messagebox.twig" as messagebox %}
{% import "macros/badges.twig" as badgesmacros %}
{% extends "base.twig" %}

{% block page_title %}
	{{ user.nick }}
{% endblock %}

{% block page_content %}

{% if badges|length > 0 %}
<ul class="inline">
	{% for badge in badges %}
		<li>{{ badgesmacros.badge(badge.name, badge.level, badge.date_rewarded) }}</li>
	{% endfor %}
</ul>
{% endif %}

<div style="text-align: center; margin-bottom: 10px;">

	{% if user.picture|length > 0 %}
		<img src="{{ user.picture }}" class="img-rounded" style="width:120px;height:120px"/>
	{% endif %}

	{% if user.id == env.user.id %}
		<p style="text-align: center; margin-top: 10px;">
		
		{% if Config("user_picture_upload_enabled") %}
			<a href="{{ env.getInternalUrl("change-profile-picture") }}" class="btn btn-small">
				<i class="icon-upload"></i> {{ Message("user_changepicture_button") }}
			</a>
			{% if user.picture_uploadfile|length > 0 %}
				<a href="{{ env.getInternalActionUrl("delete-profile-picture") }}" class="btn btn-small">
					<i class="icon-remove"></i> {{ Message("user_deletepicture_button") }}
				</a>
			{% endif %}
		{% endif %}
		
		{% if Config("gravatar_enable") %}
			<a href="http://{{ i18n.getCurrentLanguage() }}.gravatar.com" target="_blank" 
				title="{{ Message("gravatar_edit_picture") }}" class="btn btn-small">
				<i class="icon-external-link"></i> {{ Message("gravatar_edit_picture_button") }}
			</a>
		{% endif %}
		
		</p>
	{% endif %}
</div>

{% if absence %}
	{{ messagebox.box("", Message("absence_profile_info", env.getFormattedDate(absence.to_date)), "warning") }}
{% endif %}

<ul class="nav nav-tabs" id="userTab">
  <li class="active"><a href="#general" data-toggle="tab">{{ Message("user_tab_profile") }}</a></li>
  <li><a href="#activities" data-toggle="tab" class="ajaxLink"
  	data-ajaxtarget="activitieslist" data-ajaxblock="user-activities" data-ajaxquerystr="userid={{ user.id }}">{{ Message("activities_tab") }}</a></li>
  <li><a href="#results" data-toggle="tab" class="ajaxLink"
  	data-ajaxtarget="resultslist" data-ajaxblock="user-results" data-ajaxquerystr="userid={{ user.id }}">{{ Message("results_tab_latest_results") }}</a></li>
  {% if Config("transfermarket_enabled") or Config("transferoffers_enabled") %}
  <li><a href="#transfers" data-toggle="tab" class="ajaxLink"
  	data-ajaxtarget="transferslist" data-ajaxblock="usertransfers" data-ajaxquerystr="userid={{ user.id }}">{{ Message("transfers_tab") }}</a></li>
  {% endif %}
  <li><a href="#history" data-toggle="tab" class="ajaxLink"
  	data-ajaxtarget="historycontent" data-ajaxblock="user-history" data-ajaxquerystr="userid={{ user.id }}">{{ Message("history_tab") }}</a></li>
  
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="general">
  
  	{% if user.id == env.user.id %}
  	<p><a href="{{ env.getInternalUrl("profile") }}" class="btn"><i class="icon-edit"></i> {{ Message("button_edit") }}</a></p>
  	{% endif %}
  
	<div class="row-fluid">
		<div class="span6">
			{% if userteams|length > 1 %}
				{% set team = "<ul class=\"unstyled\">" %}
				{% for userteam in userteams %}
					{% set team = team ~ "<li><a href=\"" ~ env.getInternalUrl("team", "id=" ~ userteam.id) ~ "\">" ~ userteam.name|e ~ "</a></li>" %}
				{% endfor %}
				{% set team = team ~ "</ul>" %}
			{% elseif userteams|length == 1 %}
				{% set team = "<a href=\"" ~ env.getInternalUrl("team", "id=" ~ userteams[0].id) ~ "\">" ~ userteams[0].name|e ~ "</a>" %}
			{% else %}
				{% set team = "-" %}
			{% endif %}
			
			{{ profile.infofield(Message("entity_club"), team, true) }}
			
			{% if user.nationalteam is defined %}
				{% set nationalteam = "<a href=\"" ~ env.getInternalUrl("team", "id=" ~ user.nationalteam.id) ~ "\">" ~ user.nationalteam.name|e ~ "</a>" %}
				{{ profile.infofield(Message("nationalteams_team_label"), nationalteam, true) }}
			{% endif %}
			
			{{ profile.infofield(Message("entity_users_highscore"), user.highscore) }}
			{{ profile.infofield(Message("entity_users_fanbeliebtheit"), user.popularity ~ "%") }}
			{{ profile.infofield(Message("entity_users_datum_anmeldung"), env.getFormattedDate(user.registration_date)) }}
			{{ profile.infofield(Message("entity_users_lastonline"), env.getFormattedDate(user.lastonline)) }}
		</div>
		<div class="span6">
		
		{% if user.name|length > 0 %}
			{{ profile.infofield(Message("entity_users_name"), user.name) }}
		{% endif %}
		{% if user.place|length > 0 %}
			{{ profile.infofield(Message("entity_users_wohnort"), user.place) }}
		{% endif %}
		{% if user.country|length > 0 %}
			{{ profile.infofield(Message("entity_users_land"), user.country) }}
		{% endif %}
		{% if user.birthday > 0 %}
			{{ profile.infofield(Message("entity_users_geburtstag"), user.birthday|date(Config("date_format"))) }}
		{% endif %}
		{% if user.occupation|length > 0 %}
			{{ profile.infofield(Message("entity_users_beruf"), user.occupation) }}
		{% endif %}
		{% if user.interests|length > 0 %}
			{{ profile.infofield(Message("entity_users_interessen"), user.interests) }}
		{% endif %}
		{% if user.favorite_club|length > 0 %}
			{{ profile.infofield(Message("entity_users_lieblingsverein"), user.favorite_club) }}
		{% endif %}
		{% if user.homepage|length > 0 %}
		
			{% set websiteLink = "<a href=\"" ~ user.homepage ~ "\" target=\"_blank\">" ~ Message("user_visit_website") ~ "</a>" %}
		
			{{ profile.infofield(Message("entity_users_homepage"), websiteLink, true) }}
		{% endif %}
		</div>
	</div>
  
  </div>
  
  <div class="tab-pane" id="activities">
  	<div id="activitieslist"></div>
  </div>
  
  <div class="tab-pane" id="results">
  	<div id="resultslist"></div>
  </div>
  
  {% if Config("transfermarket_enabled") or Config("transferoffers_enabled") %}
  <div class="tab-pane" id="transfers">
  	<div id="transferslist"></div>
  </div>
  {% endif %}
  
  <div class="tab-pane" id="history">
  	<div id="historycontent"></div>
  	
  	{% if user.history|length > 0 %}
  		<h4>{{ Message("entity_users_history") }}</h4>
			{{ user.history|nl2br }}
	{% endif %}
  </div>
</div>

{% endblock %}
